@model DefenseSimulator.Models.Arsenal

@{
    ViewData["Title"] = "Create";
}

@if(ViewBag.errors != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @ViewBag.errors
    </div>

}

<div class="container mt-4">
    <h1>Create</h1>
    <div class="card col-6">
        <div class="card-header">
            <h4>Create New Arsenal</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="DefenseWeaponId" class="control-label">Defense Weapon</label>
                    <select asp-for="DefenseWeaponId" class="form-control" asp-items="ViewBag.DefenseWeaponId"></select>
                </div>

                <div class="form-group ">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="card-footer">
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
